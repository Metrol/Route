{
    "name"       : "metrol/route",
    "description": "HTTP route and dispatch library",
    "type"       : "library",
    "license"    : "MIT License",
    "homepage"   : "https://github.com/Metrol/Route",
    "version"    : "0.1.0",

    "repositories" : [
        {
            "type": "vcs",
            "url" : "https://github.com/Metrol/Request"
        }
    ],

    "require" : {
        "php"           : ">=8.0",
        "metrol/request": "dev-master"
    },

    "require-dev": {
        "phpunit/phpunit"    : "^9.5",
        "symfony/var-dumper" : "5.*"
    },

    "autoload": {
        "psr-4": {
            "Metrol\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Metrol\\Tests\\": "tests/"
        }
    }
}
